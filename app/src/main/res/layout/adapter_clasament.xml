<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/poza"
        android:layout_height="50dp"
        android:src="@drawable/crowntwo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numeEchipa"
        android:textSize="20dp"
        android:textColor="#886176"
        android:layout_centerInParent="true"
        android:text="Black Hats"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/timpEchipa"
        android:layout_marginTop="5dp"
        android:textColor="#0f5354"
        android:layout_alignParentEnd="true"
        android:text="1h 36mins"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_below="@+id/timpEchipa"
        android:id="@+id/puncteEhipa"
        android:textColor="#0f5354"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:text="50 Puncte"/>


</RelativeLayout>

</LinearLayout>